<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>io.interface21</groupId>
    <artifactId>ameba-lib</artifactId>
    <version>1.12-SNAPSHOT</version>
    <name>${project.artifactId}</name>
    <description>Ameba Utilities</description>
    <url>https://github.com/abraxas-labs/ameba-lib</url>
    <licenses>
        <license>
            <name>Apache-2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <developers>
        <developer>
            <id>openwms</id>
            <name>Heiko Scherrer</name>
            <email>scherrer@openwms.org</email>
        </developer>
        <developer>
            <id>Neolysion</id>
            <name>Boris Simic</name>
            <email>borochief@gmail.com</email>
        </developer>
    </developers>
    <properties>
        <java.version>1.8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>${java.version}</maven.compiler.source>
        <maven.compiler.target>${java.version}</maven.compiler.target>
        <additionalparam>-Xdoclint:none</additionalparam> <!-- see: http://blog.joda.org/2014/02/turning-off-doclint-in-jdk-8-javadoc.html -->
        <project.scm.id>github</project.scm.id> <!-- Used to release and tag on GitHub -->

        <!-- Dependency versions -->
        <cdi-api.version>2.0</cdi-api.version>
        <dozer.version>5.5.1</dozer.version>
        <el-impl.version>2.2</el-impl.version>
        <h2.version>1.4.197</h2.version> <!-- in line with boot -->
        <hibernate-validator.version>6.0.9.Final</hibernate-validator.version> <!-- in line with boot -->
        <jackson.version>2.9.5</jackson.version> <!-- in line with boot -->
        <javax-persistence.version>2.2.0</javax-persistence.version> <!-- in line with Spring Data release train and org.eclipse.persistence:org.eclipse.persistence.jpa -->
        <javax.validation-api.version>2.0.1.Final</javax.validation-api.version> <!-- in line with hibernate-validator-parent -->
        <json-path.version>2.4.0</json-path.version> <!-- in line with boot -->
        <jjwt.version>0.9.0</jjwt.version>
        <junit.version>4.12</junit.version> <!-- in line with boot -->
        <jwks-rsa.version>0.3.0</jwks-rsa.version>
        <servlet-api.version>3.1.0</servlet-api.version> <!-- in line with boot -->
        <spring-hateoas.version>0.24.0.RELEASE</spring-hateoas.version> <!-- in line with boot -->
        <spring-security.version>5.0.4.RELEASE</spring-security.version> <!-- in line with boot -->
        <spring.version>5.0.5.RELEASE</spring.version> <!-- in line with boot -->
        <spring-boot-dependencies.version>2.0.1.RELEASE</spring-boot-dependencies.version>
        <spring-data-releasetrain.version>Kay-SR6</spring-data-releasetrain.version> <!-- in line with boot -->

        <!-- Plugin versions -->
        <maven-jar-plugin.version>2.6</maven-jar-plugin.version>
        <maven-javadoc-plugin.version>2.10.3</maven-javadoc-plugin.version>
        <maven-release-plugin.version>2.5.3</maven-release-plugin.version>
        <maven-source-plugin.version>3.0.0</maven-source-plugin.version>
        <maven-gpg-plugin.version>1.6</maven-gpg-plugin.version>
    </properties>

    <profiles>
        <profile>
            <id>release</id>
            <activation>
                <property>
                    <name>release</name>
                </property>
            </activation>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <artifactId>maven-gpg-plugin</artifactId>
                            <version>${maven-gpg-plugin.version}</version>
                            <executions>
                                <execution>
                                    <id>sign-artifacts</id>
                                    <phase>verify</phase>
                                    <goals>
                                        <goal>sign</goal>
                                    </goals>
                                </execution>
                            </executions>
                        </plugin>
                    </plugins>
                </pluginManagement>
                <plugins>
                    <plugin>
                        <artifactId>maven-gpg-plugin</artifactId>
                    </plugin>
                    <plugin>
                        <artifactId>maven-source-plugin</artifactId>
                        <version>${maven-source-plugin.version}</version>
                        <executions>
                            <execution>
                                <id>attach-sources</id>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <version>${maven-javadoc-plugin.version}</version>
                        <executions>
                            <execution>
                                <id>attach-javadocs</id>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-release-plugin</artifactId>
                <version>${maven-release-plugin.version}</version>
                <configuration>
                    <useReleaseProfile>false</useReleaseProfile>
                    <releaseProfiles>release</releaseProfiles>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <version>${maven-jar-plugin.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>javax.servlet</groupId>
